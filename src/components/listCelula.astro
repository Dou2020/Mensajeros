---
import { getData3 } from "../utils/notion";

const notionList = await getData3();
---

<!-- Barra de búsqueda -->
<div class="mb-8 max-w-2xl mx-auto">
  <form id="searchForm" class="relative">
    <label for="celula-search" class="sr-only">Buscar célula</label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
        <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
      </div>
      <input 
        type="search" 
        id="celula-search" 
        class="block w-full pl-12 pr-32 py-4 text-sm text-gray-900 border border-gray-300 rounded-xl bg-white focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500 shadow-md transition-all duration-300" 
        placeholder="Buscar por nombre, dirigente o lugar..."
      />
      <button 
        type="submit" 
        class="absolute right-2 bottom-2 top-2 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium rounded-lg px-6 focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 transition-all duration-300 shadow-md"
      >
        Buscar
      </button>
    </div>
  </form>
  
  <!-- Contador de resultados -->
  <div id="results-count" class="mt-3 text-center text-sm text-gray-600 dark:text-gray-400"></div>
</div>

<!-- Grid de Células -->
<div id="celulas-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 auto-rows-fr">
  {notionList.map((item) => (
    <article 
      class="celula-card group h-full" 
      data-nombre={item.nombre?.toLowerCase() || ''}
      data-dirige={item.dirige?.toLowerCase() || ''}
      data-lugar={item.lugar?.toLowerCase() || ''}
    >
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-1 h-full flex flex-col">
        <!-- Imagen -->
        <div class="relative overflow-hidden h-56 flex-shrink-0">
          <img 
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
            src={item.file} 
            alt={`Célula ${item.nombre}`}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
        </div>
        
        <!-- Contenido -->
        <div class="p-6 flex flex-col flex-grow">
          <!-- Nombre de la Célula -->
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 min-h-[2.5rem]">
            Célula {item.nombre}
          </h3>
          
          <div class="space-y-3 flex-grow">
            <!-- Dirigente -->
            <div class="flex items-start">
              <svg class="w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <div class="flex-grow">
                <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Dirige</p>
                <p class="text-base font-semibold text-gray-900 dark:text-white">{item.dirige}</p>
              </div>
            </div>
            
            <!-- Predicador -->
            <div class="flex items-start">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              <div class="flex-grow">
                <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Predica</p>
                <p class="text-base font-medium text-gray-900 dark:text-white italic">{item.predica}</p>
              </div>
            </div>
            
            <!-- Lugar -->
            <div class="flex items-start pt-2 border-t border-gray-200 dark:border-gray-700">
              <svg class="w-5 h-5 text-green-600 dark:text-green-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-sm text-gray-700 dark:text-gray-300 flex-grow">{item.lugar}</p>
            </div>
          </div>
        </div>
      </div>
    </article>
  ))}
</div>

<!-- Mensaje cuando no hay resultados -->
<div id="no-results" class="hidden text-center py-12">
  <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
  </svg>
  <p class="text-xl text-gray-500 dark:text-gray-400 mb-2">No se encontraron células</p>
  <p class="text-sm text-gray-400 dark:text-gray-500">Intenta con otros términos de búsqueda</p>
</div>

<script>
  const searchForm = document.getElementById('searchForm') as HTMLFormElement;
  const searchInput = document.getElementById('celula-search') as HTMLInputElement;
  const celulasGrid = document.getElementById('celulas-grid') as HTMLElement;
  const noResults = document.getElementById('no-results') as HTMLElement;
  const resultsCount = document.getElementById('results-count') as HTMLElement;
  const cards = document.querySelectorAll('.celula-card') as NodeListOf<HTMLElement>;
  
  const totalCelulas = cards.length;
  
  function updateResultsCount(count: number) {
    if (searchInput.value.trim()) {
      resultsCount.textContent = `${count} de ${totalCelulas} células encontradas`;
      resultsCount.classList.remove('hidden');
    } else {
      resultsCount.textContent = `${totalCelulas} células disponibles`;
      resultsCount.classList.remove('hidden');
    }
  }
  
  function filterCelulas(query: string) {
    const searchTerm = query.toLowerCase().trim();
    let visibleCount = 0;
    
    cards.forEach(card => {
      const nombre = card.dataset.nombre || '';
      const dirige = card.dataset.dirige || '';
      const lugar = card.dataset.lugar || '';
      
      const matches = nombre.includes(searchTerm) || 
                     dirige.includes(searchTerm) || 
                     lugar.includes(searchTerm);
      
      if (matches || searchTerm === '') {
        card.classList.remove('hidden');
        visibleCount++;
      } else {
        card.classList.add('hidden');
      }
    });
    
    if (visibleCount === 0 && searchTerm !== '') {
      celulasGrid.classList.add('hidden');
      noResults.classList.remove('hidden');
    } else {
      celulasGrid.classList.remove('hidden');
      noResults.classList.add('hidden');
    }
    
    updateResultsCount(visibleCount);
  }
  
  // Búsqueda en tiempo real
  searchInput.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    filterCelulas(target.value);
  });
  
  // Búsqueda al enviar formulario
  searchForm.addEventListener('submit', (e) => {
    e.preventDefault();
    filterCelulas(searchInput.value);
  });
  
  // Mostrar contador inicial
  updateResultsCount(totalCelulas);
</script>
