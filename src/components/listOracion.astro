---
import { getData2 } from "../utils/notion";
import { getformat } from "../utils/format";

const notionList = await getData2();
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
  {notionList.map((item) => (
    <article class="group">
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-1">
        <!-- Imagen -->
        <div class="relative overflow-hidden h-56">
          <img 
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
            src={item.file} 
            alt={item.tema}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        </div>
        
        <!-- Contenido -->
        <div class="p-6">
          <!-- Tema -->
          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-4 line-clamp-2">
            {item.tema}
          </h3>
          
          <!-- Fecha -->
          <div class="flex items-center text-gray-600 dark:text-gray-300 mb-4">
            <svg class="w-5 h-5 mr-2 flex-shrink-0 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time class="text-sm sm:text-base font-medium italic">{getformat(item.fecha)}</time>
          </div>
          
          <div class="space-y-3">
            <!-- Dirigente -->
            {item.dirige && item.dirige !== "n" && (
              <div class="flex items-start">
                <svg class="w-5 h-5 text-teal-600 dark:text-teal-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Dirige</p>
                  <p class="text-base font-semibold text-gray-900 dark:text-white">{item.dirige}</p>
                </div>
              </div>
            )}
            
            <!-- Predicador -->
            {item.predica && item.predica !== "n" && (
              <div class="flex items-start">
                <svg class="w-5 h-5 text-purple-600 dark:text-purple-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Predica</p>
                  <p class="text-base font-medium text-gray-900 dark:text-white italic">{item.predica}</p>
                </div>
              </div>
            )}
            
            <!-- Descripci贸n -->
            {item.descripcion && (
              <div class="pt-3 border-t border-gray-200 dark:border-gray-700">
                <p class="text-sm sm:text-base text-gray-700 dark:text-gray-400 line-clamp-3">
                  {item.descripcion}
                </p>
              </div>
            )}
          </div>
        </div>
      </div>
    </article>
  ))}
</div>

{notionList.length === 0 && (
  <div class="text-center py-12">
    <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
    </svg>
    <p class="text-xl text-gray-500 dark:text-gray-400 mb-2">No hay programaci贸n disponible</p>
    <p class="text-sm text-gray-400 dark:text-gray-500">Pronto compartiremos los detalles de la pr贸xima semana de oraci贸n</p>
  </div>
)}