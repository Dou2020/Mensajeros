---
import { getData2 } from "../utils/notion";
import { getformat } from "../utils/format";
const notionList = await getData2();
---

    <!-- CARD of the info Celulas -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {notionList.map((item) => (
    <div id={item.nombre} >
      <div class="max-w-sm bg-blue-300 border border-gray-200 rounded-lg shadow dark:bg-gray-800 hover:bg-blue-100 dark:border-gray-700 mx-auto">
          <a href="#">
                  <img class="w-full h-60 object-cover rounded-t-lg" src={item.file} alt="" />
          </a>
          <!-- Descripcion de cada card -->
          <div class="p-5">
                <a href="#">
                  <h6 class=" mt-3 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{item.tema}</h6>
              </a>
              <p class=" my-2 text-ls italic tracking-tight text-gray-900 dark:text-white">{getformat(item.fecha) }</p>                  
              <p class=" text-lg text-gray-600 dark:text-white"> { item.dirige === "n"? "":"Dirige: "+item.dirige }</p>
              <p class=" italic text-lg text-blue-900 dark:text-white">{ item.predica === "n"? "":"Predica: "+item.predica }</p>
              <p class="mb-3 mt-3 text-ms font-normal text-gray-800 dark:text-gray-400">{item.descripcion}</p>
          </div>
      </div>
    </div>
      
        ))}
      </div>