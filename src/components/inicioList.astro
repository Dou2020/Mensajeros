---
import { getInicioEvents } from "../utils/notion";
import { getformat } from "../utils/format";

const eventos = await getInicioEvents();
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {eventos.map((evento) => (
    <div class="group bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
      <!-- Imagen -->
      <div class="relative overflow-hidden">
        <img 
          src={evento.image} 
          alt={evento.title}
          class="w-full h-56 object-cover transform group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
        {evento.category && (
          <div class="absolute top-4 left-4">
            <span class="bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">
              {evento.category}
            </span>
          </div>
        )}
      </div>
      
      <!-- Contenido -->
      <div class="p-6">
        {evento.date && (
          <p class="text-blue-600 dark:text-blue-400 font-semibold text-sm mb-2">
            {getformat(evento.date)}
          </p>
        )}
        
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          {evento.title}
        </h3>
        
        {evento.preside && (
          <div class="flex items-start gap-2 mb-2">
            <svg class="w-4 h-4 text-teal-600 dark:text-teal-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              <span class="font-semibold">Preside:</span> {evento.preside}
            </p>
          </div>
        )}
        
        {evento.predica && (
          <div class="flex items-start gap-2 mb-3">
            <svg class="w-4 h-4 text-purple-600 dark:text-purple-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              <span class="font-semibold">Predica:</span> {evento.predica}
            </p>
          </div>
        )}
        
        {evento.location && (
          <p class="text-gray-500 dark:text-gray-400 text-sm flex items-center gap-2 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {evento.location}
          </p>
        )}
        
        {evento.description && (
          <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2">
            {evento.description}
          </p>
        )}
        
        <button class="mt-2 w-full bg-gray-900 dark:bg-blue-600 text-white py-3 rounded-xl font-semibold hover:bg-blue-700 dark:hover:bg-blue-700 transition-colors">
          Ver detalles
        </button>
      </div>
    </div>
  ))}
</div>

{eventos.length === 0 && (
  <div class="col-span-full text-center py-12">
    <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
    </svg>
    <p class="text-xl text-gray-500 dark:text-gray-400 mb-2">No hay eventos disponibles</p>
    <p class="text-sm text-gray-400 dark:text-gray-500">Pronto compartiremos nuevas actividades</p>
  </div>
)}