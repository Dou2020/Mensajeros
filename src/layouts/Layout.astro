---
interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  author?: string;
}

const { 
  title = 'Iglesia Sinai Retalhuleu',
  description = 'Sitio web oficial de Iglesia Presbiteriana Sinai - Retalhuleu/Guatemala',
  keywords = 'iglesia sinai, sinai retalhuleu, iglesia guatemala',
  author = 'Iglesia Sinai Retalhuleu'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="icon" type="image/png" href="https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Sinai.jpg" />
    <title>{title}</title>
    
    <!-- Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Iglesia Sinai Retalhuleu",
        "alternateName": ["iglesia sinai", "sinai retalhuleu", "sinai guatemala", "jovenes sinai"],
        "url": "https://iglesiasinai.org/",
        "description": "Sitio web oficial de Iglesia Presbiteriana Sinai - Retalhuleu/Guatemala",
        "sameAs": [
          "https://www.facebook.com/iglesiapresbiterianasinai.reu"
        ]
      }
    </script>
  </head>
  
  <body class="bg-gradient-to-br from-blue-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 min-h-screen">
    <slot />
    
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  
  html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }
</style>
