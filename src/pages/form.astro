---
// src/pages/formulario.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="max-w-xl mx-auto p-6 bg-white rounded shadow">
    <h1 class="text-2xl font-bold mb-4">Generador de PDF</h1>

    <form method="POST" action="/api/generar-pdf" target="_blank" class="space-y-4">
      <label class="block">
        Nombre:
        <input type="text" name="nombre" required class="border p-2 w-full rounded" />
      </label>

      <label class="block">
        Correo:
        <input type="email" name="correo" required class="border p-2 w-full rounded" />
      </label>

      <label class="block">
        Mensaje:
        <textarea name="mensaje" required class="border p-2 w-full rounded"></textarea>
      </label>

      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Generar PDF
      </button>
    </form>
  </section>
</Layout>

