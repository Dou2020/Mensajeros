---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar.astro';
import ListCelula from '../components/listCelula.astro';
import Footer from '../layouts/footer.astro';

const pageMetadata = {
  title: 'Células - Iglesia Sinai Retalhuleu',
  description: 'Únete a nuestras células de crecimiento espiritual. Reuniones todos los lunes a las 7:00 PM en diferentes hogares.',
  keywords: 'células iglesia, grupos pequeños, célula sinai, reuniones lunes',
  author: 'Iglesia Sinai Retalhuleu'
};
---

<Layout 
  title={pageMetadata.title}
  description={pageMetadata.description}
  keywords={pageMetadata.keywords}
  author={pageMetadata.author}
>
  <Navbar option="C" />
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-600/10 to-blue-600/10 dark:from-purple-900/20 dark:to-blue-900/20"></div>
    <div class="container mx-auto px-4 py-8 sm:py-12 relative z-10">
      <div class="text-center mb-8 sm:mb-12 animate-fade-in">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4 tracking-tight">
          Nuestras 
          <span class="bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
            Células
          </span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Todos los lunes a las 7:00 PM
        </p>
        <p class="text-base text-gray-500 dark:text-gray-400 mt-2">
          Espacios de comunión, crecimiento y fe en diferentes hogares
        </p>
      </div>
    </div>
  </section>

  <!-- Células Section -->
  <section class="mt-8 container mx-auto px-4 pb-12">
    <ListCelula />
  </section>
  
  <Footer />
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>
