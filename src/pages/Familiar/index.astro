---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/navbar.astro';
import FamiliarList from '../../components/familiarList.astro';
import Footer from '../../layouts/footer.astro';

const pageMetadata = {
  title: 'Culto Familiar - Iglesia Sinai Retalhuleu',
  description: 'Únete a nuestro Culto Familiar. Momentos especiales de adoración y enseñanza para toda la familia en comunidad.',
  keywords: 'culto familiar, familia cristiana, culto sinai, adoración familiar, actividades familiares',
  author: 'Iglesia Sinai Retalhuleu'
};
---

<Layout 
  title={pageMetadata.title}
  description={pageMetadata.description}
  keywords={pageMetadata.keywords}
  author={pageMetadata.author}
>
  <Navbar option="D" />
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-pink-600/10 to-rose-600/10 dark:from-pink-900/20 dark:to-rose-900/20"></div>
    <div class="container mx-auto px-4 py-8 sm:py-12 relative z-10">
      <div class="text-center mb-8 sm:mb-12 animate-fade-in">
        <div class="inline-flex items-center justify-center w-16 h-16 md:w-20 md:h-20 mb-4 rounded-full bg-gradient-to-r from-pink-600 to-rose-600 text-white shadow-lg">
          <svg class="w-8 h-8 md:w-10 md:h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4 tracking-tight">
          Culto 
          <span class="bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent">
            Familiar
          </span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Momentos especiales de adoración en familia
        </p>
        <p class="text-base text-gray-500 dark:text-gray-400 mt-2">
          Fortaleciendo los lazos familiares a través de la fe
        </p>
      </div>
    </div>
  </section>

  <!-- Actividades Familiares Section -->
  <section class="container mx-auto px-4 pb-12">
    <FamiliarList />
  </section>
  
  <Footer />
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>