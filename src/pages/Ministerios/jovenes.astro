  },
  {
    cargo: 'Publicidad',
    nombre: 'Walter Zea',
    imagen: 'https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Jovenes_Directiva/publicidad.png',
    descripcion: 'Maneja la comunicación, redes sociales y promoción de eventos.'
  },
  {
    cargo: 'Recreación',
    nombre: 'Juan Ramos',
    imagen: 'https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Jovenes_Directiva/recreacion.png',
    descripcion: 'Organiza actividades recreativas, deportivas y de confraternidad.'
  },
  {
    cargo: 'Ventas',
    nombre: 'Melissa Meoño',
    imagen: 'https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Jovenes_Directiva/ventas.png',
    descripcion: 'Coordina actividades de recaudación de fondos y ventas benéficas.'
