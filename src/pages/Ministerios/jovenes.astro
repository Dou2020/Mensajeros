---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/navbar.astro';
import Footer from '../../layouts/footer.astro';

const pageMetadata = {
  title: 'Sociedad de Jóvenes - Iglesia Sinai Retalhuleu',
  description: 'Conoce la Sociedad de Jóvenes de Iglesia Sinai Retalhuleu. Nuestra directiva, actividades y ministerio juvenil.',
