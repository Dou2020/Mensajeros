  author: 'Iglesia Sinai Retalhuleu'
};

// Información de la directiva
const directiva = [
  {
    cargo: 'Pastor',
    nombre: 'Gezer Pérez',
    imagen: 'https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Jovenes_Directiva/pastor.png',
