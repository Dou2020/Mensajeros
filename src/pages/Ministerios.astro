---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar.astro';
import Footer from '../layouts/footer.astro';

const pageMetadata = {
  title: 'Ministerios - Iglesia Sinai Retalhuleu',
  description: 'Conoce los diferentes ministerios de Iglesia Sinai. Encuentra tu lugar para servir y crecer en comunidad.',
  keywords: 'ministerios iglesia, servicio cristiano, ministerios sinai, voluntariado iglesia',
  author: 'Iglesia Sinai Retalhuleu'
};

const ministerios = [
  {
    nombre: 'Ministerio de Alabanza',
    descripcion: 'Equipo de música y adoración que lidera la alabanza en nuestros servicios.',
