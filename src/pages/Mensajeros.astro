---
import CarruselMensajero from '../components/carruselMensajero.astro';
import InformativaMensajero from '../components/informativaMensajero.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mensajeros del Maestro</title>
  <link rel="icon" type="image/png" href="https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/public/icono_positivo.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white">

  <!-- Hero -->
  <header class="bg-gradient-to-r from-blue-900 to-blue-700 dark:from-gray-800 dark:to-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 py-16 flex flex-col items-center text-center">
      <img src="https://raw.githubusercontent.com/Dou2020/Mensajeros/refs/heads/main/src/assets/Perfil%20FB%202025.jpg" alt="Mensajeros" class="w-40 h-40 md:w-60 md:h-60 rounded-full shadow-lg mb-6"/>
      <h1 class="text-4xl md:text-5xl font-extrabold italic">Sociedad de Jóvenes</h1>
      <h2 class="text-2xl md:text-3xl font-bold text-blue-200 mt-2 italic">Mensajeros del Maestro</h2>
      <p class="mt-4 text-blue-100 text-lg">Actividades todos los sábados 7:00 PM</p>
      <a href="/Jovenes" class="mt-6 inline-flex items-center px-6 py-3 text-base font-medium bg-blue-600 hover:bg-blue-700 rounded-lg transition shadow">
        Conoce más
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </header>

  <!----- Importarndo el carrusel  --- -->
  <CarruselMensajero/>

  <!-- Informativa mision, vision, quienes somos -->
  <InformativaMensajero/>

  <!-- Redes Sociales -->
  <section class="px-4 py-16 bg-white dark:bg-gray-900">
    <div class="max-w-3xl mx-auto">
      <h3 class="text-2xl font-semibold mb-4 text-center">Síguenos en redes sociales</h3>
      <div class="space-y-4">
        <a href="https://www.facebook.com/reel/1137071838017047" class="flex items-center justify-between p-4 rounded-lg bg-blue-100 hover:bg-blue-200 dark:bg-blue-600 dark:hover:bg-blue-500">
          <span class="flex items-center gap-3">
            <svg class="w-6 h-6 text-blue-700 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M13.135 6H15V3h-1.865a4.147 4.147 0 0 0-4.142 4.142V9H7v3h2v9.938h3V12h2.021l.592-3H12V6.591A.6.6 0 0 1 12.592 6h.543Z"/>
            </svg>
            <span class="font-bold text-blue-800 dark:text-white">Facebook</span>
          </span>
          <span class="text-sm bg-white px-2 py-0.5 rounded dark:bg-gray-700">Popular</span>
        </a>

        <a href="https://www.instagram.com/reel/DFjNn4jvbnw/?igsh=MTI4YjFtZ2J6Zm9qeA==" class="flex items-center justify-between p-4 rounded-lg bg-red-100 hover:bg-red-200 dark:bg-red-600 dark:hover:bg-red-500">
          <span class="flex items-center gap-3">
            <svg class="w-6 h-6 text-red-700 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M3 8a5 5 0 0 1 5-5h8a5 5 0 0 1 5 5v8a5 5 0 0 1-5 5H8a5 5 0 0 1-5-5V8Zm5-3a3 3 0 0 0-3 3v8a3 3 0 0 0 3 3h8a3 3 0 0 0 3-3V8a3 3 0 0 0-3-3H8Zm7.597 2.214a1 1 0 0 1 1-1h.01a1 1 0 1 1 0 2h-.01a1 1 0 0 1-1-1ZM12 9a3 3 0 1 0 0 6 3 3 0 0 0 0-6Zm-5 3a5 5 0 1 1 10 0 5 5 0 0 1-10 0Z" clip-rule="evenodd"/>
            </svg>
            <span class="font-bold text-red-900 dark:text-white">Instagram</span>
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-blue-900 text-white text-center py-6">
    <p class="text-sm">&copy; 2025 Mensajeros del Maestro. Todos los derechos reservados.</p>
  </footer>

</body>
</html>
